{
  "extends": "@equisoft/typescript-config/tsconfig.standards.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./dist",
    "declaration": false,
    "paths": {
      "~/*": ["../../react/src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "../react/src/**/*",
    "../react/test/**/*"
  ],
  "exclude": []
}
