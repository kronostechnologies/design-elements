{
    "extends": "./node_modules/@equisoft/tslint-config/tsconfig.standards.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "baseUrl": "./src/",
        "paths": {
            "@design-elements/*": ["./*"]
        },
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.test.ts?",
        "**/test-utils/**/*"
    ]
}
