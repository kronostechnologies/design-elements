{
    "extends": "../node_modules/@equisoft/tslint-config/tsconfig.standards.json",
    "compilerOptions": {
      "target": "ES2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": "../src/",
      "paths": {
        "*": [
          "../node_modules/@types/*",
          "*"
        ]
      }
    },
    "include": [
      "../", "../custom.d.ts"
    ],
    "exclude": [
      "../node_modules/**/*",
      "../**/*.test.tsx",
      "../**/test-utils/**/*",
      "../scripts"
    ]
  }
