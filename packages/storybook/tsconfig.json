{
  "extends": "@equisoft/typescript-config/tsconfig.standards.json",
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./stories/",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "../node_modules/@types/*",
        "*"
      ]
    }
  },
  "include": [
    "stories", "custom.d.ts"
  ],
  "exclude": [
    "node_modules", "scripts"
  ]
}
